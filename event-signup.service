[Unit]
Description=Event Signup Application
After=network.target

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/home/deploy/event-signup
ExecStart=/home/deploy/event-signup/event-signup-app
Restart=on-failure
RestartSec=5

# Environment
EnvironmentFile=/home/deploy/event-signup/.env

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/deploy/event-signup
PrivateTmp=true

[Install]
WantedBy=multi-user.target
